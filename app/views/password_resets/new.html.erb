<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>パスワードリセット申請</h1>
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", autocomplete: "current-password" %>
        </div>
        <%= f.submit "送信", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>