<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= 'プロフィール' %></h1>
      <table class="table" style="margin: 0 auto; text-align: center;">
        <tr>
          <td class="avatar-cell" style="display: flex; justify-content: center;">
            <%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '150x150' %>
          </td>
        </tr>
        <tr>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td><%= current_user.user_name %></td>
        </tr>
      </table>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-end' %>
    </div>
  </div>
</div>