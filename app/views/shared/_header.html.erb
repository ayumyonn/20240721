<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= 'home' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        
        <%= link_to 'Ribbon', bookmarks_posts_path, class: 'nav-link' %>

        <li class='nav-item'>
          <%= link_to 'post_create', new_post_path, class: 'nav-link' %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '/', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            
            
            <% if current_user.avatar.present? %>
              <%= image_tag current_user.avatar_url, class: 'rounded-circle mr15', width: '40', height: '40' %>
            <% else %>
              <%= image_tag 'https://img.esa.io/uploads/production/attachments/2315/2019/05/22/53778/0b16e705-5c18-4a75-aa15-cc6260bd8db3.jpg', class: 'rounded-circle mr15', width: '40', height: '40' %>
            <% end %>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= current_user.user_name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to 'プロフィール', profile_path, class: 'dropdown-item' %>
            <%= link_to 'ログアウト', login_path, method: :delete, class: 'dropdown-item' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>